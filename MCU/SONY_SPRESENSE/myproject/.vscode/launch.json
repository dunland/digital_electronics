{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Main Core",
            "cwd": "${workspaceFolder:VSCode_SPRESENSE_workspace}",
            "executable": "./out/${workspaceFolderBasename}.nuttx",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "cxd5602.cfg"
            ],
            "searchDir": [
                "${workspaceFolder:spresense}/sdk/tools"
            ],
            "svdFile": "${workspaceFolder:spresense}/sdk/tools/SVD/cxd5602.svd",
            "debuggerArgs": [
                "-ix",
                ".vscode/.gdbinit"
            ],
            "preLaunchTask": "Clean flash",
            "overrideLaunchCommands": [
                "monitor reset",
                "monitor halt",
                "load"
            ],
            "overrideRestartCommands": [
                "monitor sleep 3000",
                "monitor halt",
                "load"
            ]
        }
    ]
}